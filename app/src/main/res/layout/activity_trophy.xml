<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="honoursproject.garethlloyd.healthinformationdelivery.TrophyActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Trophies"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/scrollView"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/trophy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/title"
                android:layout_marginTop="20dp"
                android:src="@drawable/bronze_trophy" />


            <ImageView
                android:id="@+id/trophy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy"
                android:src="@drawable/silver_trophy" />

            <ImageView
                android:id="@+id/trophy3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy2"
                android:src="@drawable/trophy" />

            <ImageView
                android:id="@+id/trophy4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy3"
                android:src="@drawable/bronze_trophy" />

            <ImageView
                android:id="@+id/trophy5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/silver_trophy" />

            <ImageView
                android:id="@+id/trophy6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy5"
                android:src="@drawable/trophy" />

            <ImageView
                android:id="@+id/trophy7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy6"
                android:src="@drawable/bronze_trophy" />

            <ImageView
                android:id="@+id/trophy8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy7"
                android:src="@drawable/silver_trophy" />

            <ImageView
                android:id="@+id/trophy9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/trophy" />

            <ImageView
                android:id="@+id/trophy10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy9"
                android:src="@drawable/bronze_trophy" />

            <ImageView
                android:id="@+id/trophy11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy10"
                android:src="@drawable/silver_trophy" />

            <ImageView
                android:id="@+id/trophy12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy11"
                android:src="@drawable/trophy" />

            <ImageView
                android:id="@+id/trophy13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy12"
                android:src="@drawable/bronze_trophy" />



            <ImageView
                android:id="@+id/trophy14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy13"
                android:src="@drawable/silver_trophy" />

            <ImageView
                android:id="@+id/trophy15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy14"
                android:src="@drawable/trophy" />

            <ImageView
                android:id="@+id/trophy16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy15"
                android:src="@drawable/bronze_trophy" />

            <ImageView
                android:id="@+id/trophy17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/silver_trophy" />

            <ImageView
                android:id="@+id/trophy18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/trophy17"
                android:src="@drawable/trophy" />



        </LinearLayout>

</HorizontalScrollView>


    <ImageView
    android:id="@+id/trophyUsage"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_below="@id/scrollView"
    android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
    android:src="@drawable/trophy" />

    <ImageView
        android:id="@+id/trophyEverything"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/scrollView"
        android:layout_toRightOf="@id/trophyUsage"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/trophy" />

    <ImageView
        android:id="@+id/trophySteps"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/scrollView"
        android:layout_toRightOf="@id/trophyEverything"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/trophy" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/textUsage"
        android:layout_below="@id/trophyUsage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Usage"
        android:textAlignment="center"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/textEverything"
        android:layout_below="@id/trophyEverything"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/textUsage"
        android:text="Everything"
        android:textAlignment="center"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/textSteps"
        android:layout_below="@id/trophySteps"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/textEverything"
        android:text="Steps"
        android:textAlignment="center"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/trophyWater"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/trophyUsage"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/trophy" />

    <ImageView
        android:id="@+id/trophyActive"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/trophyEverything"
        android:layout_toRightOf="@id/trophyWater"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/trophy" />

    <ImageView
        android:id="@+id/trophyFruit"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/trophySteps"
        android:layout_toRightOf="@id/trophyActive"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/trophy" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/textWater"
        android:layout_below="@id/trophyWater"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Water"
        android:textAlignment="center"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/textActive"
        android:layout_below="@id/trophyActive"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/textUsage"
        android:text="Active"
        android:textAlignment="center"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/textFruit"
        android:layout_below="@id/trophyFruit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/textEverything"
        android:text="Fruit and Veg"
        android:textAlignment="center"
        android:textSize="12sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/buttonHome"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>

