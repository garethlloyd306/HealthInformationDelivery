<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_layout_root"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView android:id="@+id/textEarned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="@string/stringEarned"
        android:padding="5dp"
        android:textSize="15dp"/>

    <TextView android:id="@+id/textTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textEarned"
        android:textSize="25sp"/>


    <ImageView android:src="@drawable/water_large"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textTop"
        android:layout_margin="10dp"/>


    <TextView android:id="@+id/textNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image"
        android:text="To earn next award:"
        android:padding="5dp"
        android:textSize="15sp"/>

    <TextView android:id="@+id/textAward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/textNext"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textAlignment="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/close"
        android:layout_below="@+id/textAward"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>